{% extends 'template.html.twig' %}

{% block body %}
    <h2>Welcome {{ patron.getPatronName }}</h2>

    <h3>Search for a book by title</h3>

    <form action="/patron/book/search" method="post">
        <input type='text' name='patron_id' value='{{ patron.getId }}' hidden>
        <div class='form-group row'>
            <label for="title">Title:</label>
            <input type="text" name="title" value="" required>
        </div>

        <button type="submit">Search</button>
    </form>

    <h3>Search for a book by author</h3>

    <form action="/patron/book/search" method="post">
        <input type='text' name='patron_id' value='{{ patron.getId }}' hidden>
        <div class='form-group row'>
            <label for="author_name">Author:</label>
            <input type="text" name="author_name" value="" required>
        </div>

        <button type="submit">Search</button>
    </form>



</div>
{% endblock %}
