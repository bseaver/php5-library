{% extends 'template.html.twig' %}

{% block body %}
    <h2>Welcome Librarian</h2>
    <h3>Add a book</h3>
    <div class='row'>
        <div class='col-md-6'>
            <form action="/book_add" method="post">
                <div class='form-group row'>
                    <label for="book_title">Book name:
                    </label>
                    <input type="text" name="book_title" value="" required>
                </div>
                <div class='form-group row'>
                    <label for="author_name">Author name:
                    </label>
                    <input type="text" name="author_name" value="" required>
                </div>
                <div class='form-group row'>
                    <label for="synopsis">Synopsis:
                    </label>
                    <input type="text" name="synopsis" value="" required>
                </div>
                <div class='form-group row'>
                    <label for="publish_date">Publish Date:
                    </label>
                    <input type="date" name="publish_date" value="" required>
                </div>
                <div class='form-group row'>
                    <label for="copies">Copies:
                    </label>
                    <input type="number" name="copies" value="" min="1" required>
                </div>

                <button type="submit">Add</button>
            </form>

            <h3>Search for a book by title</h3>

            <form action="/librarian_title_search" method="post">
                <div class='form-group row'>
                    <label for="title">Title:</label>
                    <input type="text" name="title" value="" required>
                </div>

                <button type="submit">Search</button>
            </form>

            <h3>Search for a book by author</h3>

            <form action="/librarian_author_search" method="post">
                <div class='form-group row'>
                    <label for="author_name">Author:</label>
                    <input type="text" name="author_name" value="" required>
                </div>

                <button type="submit">Search</button>
            </form>
            <br>
            <h3>View patron checkouts</h3>
            <form action="/librarian_checkout">
                <button type="submit" name="button">View checkouts</button>
            </form>
        </div>

        <div class='col-md-6'>
            <h3>All books:</h3>
            {% if books is not empty %}
                {% for book in books %}
                    <li>
                        <a href='/book/{{book.getId}}'>{{ book.getTitle }}</a>
                    </li>
                {% endfor %}
            {% endif %}
        </div>
    </div>
{% endblock %}
